// cstddef standard header
#ifndef _CSTDDEF_
#define _CSTDDEF_
#ifdef _STD_USING
 #undef _STD_USING
 #include <stddef.h>
 #define _STD_USING
#else
 #include <stddef.h>
#endif /* _STD_USING */

#if _GLOBAL_USING && !defined(RC_INVOKED)
_STD_BEGIN
using _CSTD ptrdiff_t; using _CSTD size_t;
_STD_END
#endif /* _GLOBAL_USING */

#if !defined(RC_INVOKED)
namespace std {
typedef double max_align_t;	// most aligned type
}

#endif /* !defined(RC_INVOKED) */

#endif /* _CSTDDEF_ */
